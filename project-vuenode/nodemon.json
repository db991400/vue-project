{
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
        "js": "node --harmony"
    },
    
    "watch": [
        "*.*"
    ],
    "env": {
        "NODE_ENV": "development",
        "port": "3000"
    },
    "ext": "js json"
}